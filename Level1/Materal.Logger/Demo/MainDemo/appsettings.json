{
  //LogLevel:Trace,Debug,Information,Warning,Error,Critical,None
  //Format: DateTime,Date,Time,Year,Month,Day,Hour,Minute,Second,Level,Scope,Message,CategoryName,Exception,ProgressID,ThreadID,Application,MachineName
  //Path: Date,Year,Month,Day,Hour,Minute,Second,Level,Scope,CategoryName,Exception,ProgressID,ThreadID,Application,MachineName
  "Logging": {
    "LogLevel": { //兼容默认日志配置,优先级1
      "Default": "Trace",
      "Microsoft": "Warning"
    }
  },
  "MateralLogger": {
    "Application": "${ApplicationName}", //应用程序名称
    "Mode": "Strict", //Normal,Strict=>Normal[普通模式,应用程序退出时不会等待日志记录完毕],Strict[严格模式,应用程序退出时会等待所有日志记录完成]，默认Strict
    "LogLogLevel": { //日志自身日志配置
      "MinLevel": "Trace",
      "MaxLevel": "Critical"
    },
    "LogLevel": { //默认日志配置,优先级2
      "Default": "Trace",
      "Microsoft": "Warning"
    },
    "Targets": [ //目标组
      {
        "Enable": true, //启用标识
        "Name": "LifeConsole", //目标名称
        "Type": "Console", //控制台日志类型
        "Format": "${DateTime}|${Application}|${Level}|${Scope}|${CategoryName}|[${MachineName},${ProgressID},${ThreadID}]\r\n${Message}\r\n${Exception}", //日志格式
        "Colors": { //日志颜色
          "Trace": "DarkGray",
          "Debug": "DarkGreen",
          "Information": "Gray",
          "Warning": "DarkYellow",
          "Error": "DarkRed",
          "Critical": "Red"
        }
      },
      {
        "Enable": true,
        "Name": "LevelFile",
        "Type": "File", //文件日志类型
        "Path": "${RootPath}\\Logs\\${Date}\\${Level}.log", //日志路径
        "Format": "${DateTime}|${Application}|${Level}|${Scope}|${CategoryName}|[${MachineName},${ProgressID},${ThreadID}]\r\n${Message}\r\n${Exception}" //日志格式
      },
      {
        "Enable": true,
        "Name": "HttpLog",
        "Type": "Http", //Http日志类型
        "Url": "http://localhost:5000/api/Log/WriteLog", //Http请求地址
        "HttpMethod": "POST", //Http请求方法
        "Format": "{\"CreateTime\":\"${DateTime}\",\"Application\":\"${Application}\",\"Level\":\"${Level}\",\"Scope\":\"${Scope}\",\"CategoryName\":\"${CategoryName}\",\"MachineName\":\"${MachineName}\",\"ProgressID\":\"${ProgressID}\",\"ThreadID\":\"${ThreadID}\",\"Message\":\"${Message}\",\"Exception\":\"${Exception}\"}" //日志格式,Get、Delete请求时为Query参数，其他请求为Body参数
      },
      {
        "Enable": true,
        "Name": "LocalDB",
        "Type": "Sqlite", //Sqlite日志类型,数据库路径或链接字符串必选其一，优先使用数据库接字符串
        "Path": "${RootPath}\\Logs\\MateralLogger.db", //Sqlite数据库路径
        "ConnectionString": "Data Source=${RootPath}\\Logs\\MateralLogger.db" //Sqlite数据库连接字符串
      },
      {
        "Enable": true,
        "Name": "ServerDB",
        "Type": "SqlServer", //SqlServer日志类型
        "ConnectionString": "${LogDBConnectionString}" //SqlServer数据库连接字符串
      },
      {
        "Enable": true,
        "Name": "LocalWebSocket",
        "Type": "WebSocket", //WebSocket日志类型
        "Port": 5002, //WebSocket端口
        "Format": "${DateTime}|${Application}|${Level}|${Scope}|${CategoryName}|[${MachineName},${ProgressID},${ThreadID}]\r\n${Message}\r\n${Exception}", //日志格式
        "Colors": { //日志颜色
          "Trace": "DarkGray",
          "Debug": "DarkGreen",
          "Information": "Gray",
          "Warning": "DarkYellow",
          "Error": "DarkRed",
          "Critical": "Red"
        }
      }
    ],
    "Rules": [ //规则组
      {
        "Enable": true, //启用标识
        "Targets": [ //目标组
          "LifeConsole"
          //"LevelFile",
          //"HttpLog",
          //"LocalDB",
          //"ServerDB",
          //"LocalWebSocket"
        ],
        "MinLevel": "Trace", //最小日志等级
        "MaxLevel": "Critical", //最大日志等级
        "LogLevel": { //默认日志配置,优先级3
          "Default": "Trace",
          "Microsoft": "Warning"
        }
      }
    ]
  }
}