{
  //LogLevel:Trace,Debug,Information,Warning,Error,Critical
  //Format: DateTime,Date,Time,Year,Month,Day,Hour,Minute,Second,Level,Scope,Message,CategoryName,Exception,ProgressID,ThreadID,Application,MachineName
  //Path: Date,Year,Month,Day,Hour,Minute,Second,Level,Scope,CategoryName,Exception,ProgressID,ThreadID,Application,MachineName
  "MateralLogger": {
    "Application": "${ApplicationName}",
    "BufferCount": 4,
    "Server": {
      "Enable": true,
      "Port": 8800,
      "MinLevel": "Information",
      "MaxLevel": "Error",
      "Targets": [
        //"AllFile",
        //"LevelFile",
        //"ErrorFile",
        //"LocalDB",
        //"MateralServer",
        "LifeConsole"
      ]
    },
    "Targets": [
      {
        "Name": "LifeConsole",
        "Type": "Console",
        "Enable": true,
        "Colors": { //指定每个级别显示的颜色 值详情见:https://learn.microsoft.com/zh-cn/dotnet/api/system.consolecolor?view=net-6.0
          "Trace": "DarkGray",
          "Debug": "DarkGreen",
          "Information": "Gray",
          "Warning": "DarkYellow",
          "Error": "DarkRed",
          "Critical": "DarkRed"
        },
        "Format": "${DateTime}|${Application}|${Level}|${Scope}|${CategoryName}|[${MachineName},${ProgressID},${ThreadID}]\r\n${Message}\r\n${Exception}"
      },
      {
        "Name": "LevelFile",
        "Type": "File",
        "Enable": true,
        "BufferCount": 10000,
        "Colors": {
          "Trace": "DarkGray",
          "Debug": "DarkGreen",
          "Information": "Gray",
          "Warning": "DarkYellow",
          "Error": "DarkRed",
          "Critical": "DarkRed"
        },
        "Path": "${RootPath}\\Logs\\${Date}\\${Level}.log",
        "Format": "${DateTime}|${Application}|${Level}|${Scope}|${CategoryName}|[${MachineName},${ProgressID},${ThreadID}]\r\n${Message}"
      },
      {
        "Name": "LocalDB",
        "Type": "Sqlite",
        "Enable": true,
        "BufferCount": 10000,
        "Colors": {
          "Trace": "DarkGray",
          "Debug": "DarkGreen",
          "Information": "Gray",
          "Warning": "DarkYellow",
          "Error": "DarkRed",
          "Critical": "DarkRed"
        },
        "Path": "${RootPath}\\Logs\\MateralLogger.db"
      },
      {
        "Name": "ServerDB",
        "Type": "SqlServer",
        "Enable": true,
        "BufferCount": 10000,
        "Colors": {
          "Trace": "DarkGray",
          "Debug": "DarkGreen",
          "Information": "Gray",
          "Warning": "DarkYellow",
          "Error": "DarkRed",
          "Critical": "DarkRed"
        },
        "ConnectionString": "${LogDBConnectionString}"
      }
    ],
    "Rules": [
      {
        "Enable": true,
        "MinLevel": "Trace",
        "MaxLevel": "Critical",
        "Targets": [
          "LifeConsole"
          "LevelFile",
          //"LocalDB",
          //"ServerDB"
        ],
        "Ignores": [
          "Microsoft.AspNetCore.*"
        ]
      }
    ]
  }
}