<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<TargetFrameworks>net6.0;net8.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<LangVersion>12.0</LangVersion>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Materal.Logger" Version="1.1.67" />
		<PackageReference Include="Materal.Utils.Consul" Version="1.1.67" />
		<PackageReference Include="MMLib.SwaggerForOcelot" Version="*" />
		<PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="6.*" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.*" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\Materal.Gateway\Materal.Gateway.csproj" />
	</ItemGroup>
	<ItemGroup>
		<Content Update="Ocelot.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
</Project>
