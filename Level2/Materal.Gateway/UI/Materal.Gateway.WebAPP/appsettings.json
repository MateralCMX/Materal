{
  "AllowedHosts": "*",
  "MateralLogger": {
    "Application": "MateralGateway",
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Components.Server.RevalidatingServerAuthenticationStateProvider": "None",
      "Ocelot": "Error",
      "System.Net.Http": "Warning"
    },
    "LoggerLogLevel": {
      "MinLevel": "Warning",
      "MaxLevel": "Critical"
    },
    "Targets": [
      {
        "Name": "LifeConsole",
        "Type": "Console",
        "Colors": {
          "Trace": "DarkGray",
          "Debug": "DarkGreen",
          "Information": "Gray",
          "Warning": "DarkYellow",
          "Error": "DarkRed",
          "Critical": "Red"
        },
        "Format": "${DateTime}|${Application}|${Level}|${Scope}|${CategoryName}\r\n${Message}\r\n${Exception}"
      },
      {
        "Name": "LevelFile",
        "Type": "File",
        "Path": "${RootPath}\\Logs\\${Date}\\${Level}.log",
        "Format": "${DateTime}|${Application}|${Level}|${Scope}|${CategoryName}\r\n${Message}\r\n${Exception}"
      }
    ],
    "Rules": [
      {
        "MinLevel": "Information",
        "MaxLevel": "Information",
        "Targets": [
          "LifeConsole"
        ]
      },
      {
        "MinLevel": "Warning",
        "MaxLevel": "Critical",
        "Targets": [
          "LifeConsole",
          "LevelFile"
        ]
      }
    ]
  },
  "Users": [
    {
      "Account": "Admin",
      "Password": "123456"
    }
  ]
}
