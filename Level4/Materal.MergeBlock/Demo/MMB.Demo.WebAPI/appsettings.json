{
  "MateralLogger": {
    "Application": "${ApplicationName}",
    "Targets": [
      {
        "Name": "ConsoleLog",
        "Type": "Console",
        "Format": "${DateTime}|${Application}|${Level}|${Scope}|${CategoryName}|[${MachineName},${ProgressID},${ThreadID}]\r\n${Message}\r\n${Exception}",
        "Colors": {
          "Trace": "DarkGray",
          "Debug": "DarkGreen",
          "Information": "Gray",
          "Warning": "DarkYellow",
          "Error": "DarkRed",
          "Critical": "Red"
        }
      }
    ],
    "Rules": [
      {
        "Name": "配置文件全目标规则",
        "Targets": [
          "ConsoleLog"
        ],
        "MinLevel": "Trace",
        "MaxLevel": "Critical",
        "LogLevel": {
          "Default": "Trace",
          "Microsoft.AspNetCore": "Warning",
          "Microsoft.Extensions.Hosting": "Warning"
        }
      }
    ]
  },
  "Authorization": {
    "Audience": "WebAPI",
    "ExpiredTime": "18000",
    "Issuer": "Materal.APP",
    "Key": "MateralCMXConfig"
  },
  "AllowedHosts": "*"
}
