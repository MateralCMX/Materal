<UserControl x:Class="MateralMergeBlockVSIX.ToolWindows.SolutionNotOpenedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MateralMergeBlockVSIX.ToolWindows"
             mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="项目名称：" VerticalAlignment="Center" />
            <TextBox Grid.Column="1" Text="Demo" />
        </Grid>
        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
            <CheckBox Content="Abstractions" />
            <CheckBox Margin="10,0,0,0" Content="Repository" />
        </StackPanel>
        <Button Margin="0,10,0,0" Content="创建 Module" />
    </StackPanel>
</UserControl>
