@layout NavMenuLayout
@page "/ConfigCenter/ConfigurationItemList"

@using WebAPP.HttpClientImpl
@using WebAPP.AntDesignHelper

@inject NavigationManager _navigationManager
@inject MessageManage _messageManage

<h3>ConfigCenter</h3>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        if (!string.IsNullOrWhiteSpace(UrlManage.ConfigCenterUrl))
        {
            await base.OnAfterRenderAsync(true);
        }
        else
        {
            _messageManage.Warning("配置中心未开启");
            _navigationManager.NavigateTo("/");
        }
    }
}
